<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jw.android.realtime_bus.Registered"
    >

    <EditText
        android:id="@+id/regiserUserName"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_marginLeft="8dp"
        android:ems="15"
        android:hint="用户名/账号"
        android:inputType="text"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,MissingConstraints"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/regiserPassword"
        app:layout_constraintVertical_bias="0.345"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/regiserPassword"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:hint="密码"
        android:ems="15"
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="LabelFor,MissingConstraints"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/regiserUserName"
        app:layout_constraintBottom_toTopOf="@+id/rewritePassword"
        app:layout_constraintHorizontal_bias="0.456"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/rewritePassword"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:hint="请重新输入密码"
        android:ems="15"
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="LabelFor,MissingConstraints"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/regiserPassword"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/register_yes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="8dp"
        android:text="注册"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rewritePassword"
        app:layout_constraintVertical_bias="0.396" />

    <Button
        android:id="@+id/register_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        app:layout_constraintRight_toLeftOf="@+id/register_yes"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rewritePassword"
        app:layout_constraintVertical_bias="0.396" />

</android.support.constraint.ConstraintLayout>
